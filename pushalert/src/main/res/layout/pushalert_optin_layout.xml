<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/pa_optin_bg_color"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="30sp"
        android:layout_width="42sp"
        android:layout_height="42sp"
        android:id="@+id/icon"
        android:layout_gravity="center"
        android:src="@drawable/pushalert_get_notified"
        />

    <TextView
        android:layout_marginTop="5sp"
        android:gravity="center"
        android:textSize="22sp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pa_optin_title_color"
        android:text="Get Notified" />

    <TextView
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:layout_marginTop="5sp"
        android:gravity="center"
        android:textSize="18sp"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pa_optin_subtitle_color"
        android:text="Enable notification to get important
updates instantly" />

    <ImageView
        android:paddingStart="30sp"
        android:paddingEnd="30sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/image"
        android:layout_below="@+id/subtitle"
        android:src="@drawable/pushalert_notifications_preview"
        />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingBottom="20sp"
        android:paddingTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/pushalert_shape_no"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:id="@+id/no"
            android:clickable="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noText"
                android:textColor="@color/pa_optin_reject_btn_color"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/pushalert_shape"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:id="@+id/yes"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/yesText"
                android:textColor="@color/pa_optin_accept_btn_color"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm in">
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>